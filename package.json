{
  "name": "wa11y-ui",
  "version": "0.0.10",
  "description": "Unstyled UI library of Web Components (Lit).",
  "main": "dist/wa11y.umd.js",
  "module": "dist/wa11y.es.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    "./wa-button": {
      "types": "./dist/src/components/atoms/Button/wa-button.d.ts",
      "import": "./dist/wa-button.es.js"
    },
    "./wa-input-checkbox": {
      "types": "./dist/src/components/atoms/InputCheckbox/wa-input-checkbox.d.ts",
      "import": "./dist/wa-input-checkbox.es.js"
    },
    "./wa-radio": {
      "types": "./dist/src/components/atoms/Radio/wa-radio.d.ts",
      "import": "./dist/wa-radio.es.js"
    },
    "./wa-text-field": {
      "types": "./dist/src/components/atoms/TextField/wa-text-field.d.ts",
      "import": "./dist/wa-text-field.es.js"
    },
    "./wa-wheel-picker": {
      "types": "./dist/src/components/atoms/WheelPicker/wa-wheel-picker.d.ts",
      "import": "./dist/wa-wheel-picker.es.js"
    },
    "./wa-form": {
      "types": "./dist/src/components/molecules/Form/wa-form.d.ts",
      "import": "./dist/wa-form.es.js"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MarcoMaz/wa11y-ui.git"
  },
  "keywords": [],
  "author": "Marco Mazzai",
  "license": "MIT",
  "homepage": "https://wa11y-storybook.netlify.app/",
